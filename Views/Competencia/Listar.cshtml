<table class="table">
    <tr class="table-header" style="color: #ffffff;">
        <th class="table-cell"style="color: #ffffff;">Id</th>
        <th class="table-cell"style="color: #ffffff;">Coluna Bloom</th>
        <th class="table-cell"style="color: #ffffff;">Linha Bloom</th>
        
    </tr>
    @{
        foreach (var item in Model.Competencias)
        {
            <tr>
                <td class="table-cell" style="color: #ffffff;">@item.Id</td>
                <td class="table-cell" style="color: #ffffff;">@item.ColunaBloom</td>
                <td class="table-cell" style="color: #ffffff;">@item.LinhaBloom</td>
            </tr>
        }
    }
    <style>
        
    table {
        margin: 20px 0;
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 5px solid #ffffff;
    }

    th {
        font-weight: bold;
    }

    .horizontal-row {
        white-space: nowrap;
    }

    .square-cell {
        border: 1px solid #000; 
        padding: 5px; 
    }
</style>
</table>